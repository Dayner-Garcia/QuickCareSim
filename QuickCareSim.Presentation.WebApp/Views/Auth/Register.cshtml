@model QuickCareSim.Application.ViewModels.Auth.RegisterViewModel
@{
    Layout = null;
    ViewData["Title"] = "Registro";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registro - QuickCareSim</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .register-wrapper {
            width: 100%;
            max-width: 900px;
        }

        .card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
        }

            .card h2 {
                color: #2e7d32;
            }

        .form-control, .form-select {
            border-radius: 10px;
        }

        .btn-register {
            background-color: #2e7d32;
            border-color: #2e7d32;
            font-weight: bold;
        }

            .btn-register:hover {
                background-color: #1b5e20;
            }

        .footer-text {
            text-align: center;
            margin-top: 1rem;
            font-size: 0.95rem;
        }

            .footer-text a {
                text-decoration: none;
                color: #0d6efd;
                font-weight: 500;
            }

                .footer-text a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="register-wrapper">
        <div class="card p-4">
            <div class="card-body">
                <h2 class="text-center mb-4">
                    <i class="bi bi-person-plus-fill me-2"></i> Crea tu Cuenta
                </h2>

                <form asp-action="Register" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Name"><i class="bi bi-person-fill me-1"></i> Nombre</label>
                            <input asp-for="Name" class="form-control" placeholder="Ingresa tu nombre" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName"><i class="bi bi-person-fill me-1"></i> Apellido</label>
                            <input asp-for="LastName" class="form-control" placeholder="Ingresa tu apellido" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="PhoneNumber"><i class="bi bi-telephone-fill me-1"></i> Teléfono</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="809-000-0000" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="UserName"><i class="bi bi-person-badge-fill me-1"></i> Usuario</label>
                            <input asp-for="UserName" class="form-control" placeholder="Nombre de usuario" />
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Email"><i class="bi bi-envelope-fill me-1"></i> Correo Electrónico</label>
                            <input asp-for="Email" class="form-control" placeholder="ej. correo@mail.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Password"><i class="bi bi-lock-fill me-1"></i> Contraseña</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="RepeatPassword"><i class="bi bi-lock-fill me-1"></i> Confirmar Contraseña</label>
                            <input asp-for="RepeatPassword" type="password" class="form-control" placeholder="Repite tu contraseña" />
                            <span asp-validation-for="RepeatPassword" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Role"><i class="bi bi-person-vcard-fill me-1"></i> Tipo de Usuario</label>
                            <select asp-for="Role" class="form-select">
                                <option value="DOCTOR">Doctor</option>
                                <option value="SECRETARY">Secretario/a</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-register w-100 mt-3">
                        <i class="bi bi-check-circle-fill me-1"></i> Registrarme
                    </button>

                    <div class="footer-text mt-4">
                        ¿Ya tienes cuenta?
                        <a href="/Auth/Login"><i class="bi bi-box-arrow-in-right me-1"></i>Inicia Sesión</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>