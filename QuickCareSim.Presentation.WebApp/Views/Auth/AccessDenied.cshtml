@{
    ViewData["Title"] = "Acceso Denegado";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Acceso Denegado - QuickCareSim</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <style>
        body {
            background: linear-gradient(135deg, #ffecd2, #fcb69f);
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }

        .card {
            backdrop-filter: blur(12px);
            background: rgba(255, 255, 255, 0.9);
            border-radius: 20px;
        }

        .btn i {
            vertical-align: middle;
        }

        .alert {
            font-size: 0.95rem;
            border-radius: 10px;
        }
    </style>
</head>
<body>

    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg border-0 mt-5">
                    <div class="card-body py-5">
                        <h1 class="text-danger fw-bold">
                            <i class="bi bi-shield-exclamation me-2"></i> Acceso Denegado
                        </h1>
                        <p class="mt-3 text-muted fs-5">
                            Lo sentimos, no tienes permiso para acceder a esta página.
                        </p>

                        <div class="d-flex justify-content-center gap-3 mt-4 flex-wrap">
                            <a href="/Properties/Index" class="btn btn-outline-primary">
                                <i class="bi bi-house-door-fill me-1"></i> Volver al Inicio
                            </a>
                            <a href="@Url.Action("Login", "Auth")" class="btn btn-outline-secondary">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Ir al Login
                            </a>
                        </div>

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success mt-4">
                                <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                            </div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger mt-3">
                                <i class="bi bi-x-circle-fill me-2"></i>@TempData["ErrorMessage"]
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>